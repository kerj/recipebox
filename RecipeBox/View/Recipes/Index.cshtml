@{
  Layout = "_Layout";
}


<h1>Recipe Box</h1>
<hr />
<h2>Recipes:</h2>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var recipe in Model)
    {
      /* <li><a href="/recipes/@recipe.Id">@recipe.Food</a></li> */
      <li>@recipe.Food</li>
    }
  </ul>
}

<h4><a href="/recipes/new">Add a new recipe</a></h4>
<h4><a href="/">Return home</a></h4>
